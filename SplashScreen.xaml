<Window x:Class="POSSystem.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="2nd Eden - Loading"
        Height="500" Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True">

    <Window.Resources>
        <!-- Enhanced Gradient Background Animation with Premium Orange Colors -->
        <Storyboard x:Key="BackgroundAnimation" RepeatBehavior="Forever">
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="GradientStop1" Storyboard.TargetProperty="Color">
                <EasingColorKeyFrame KeyTime="0:0:0" Value="#FF7A3F"/>
                <EasingColorKeyFrame KeyTime="0:0:2" Value="#FF8B47"/>
                <EasingColorKeyFrame KeyTime="0:0:4" Value="#FF9F5C"/>
                <EasingColorKeyFrame KeyTime="0:0:6" Value="#FF7A3F"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="GradientStop2" Storyboard.TargetProperty="Color">
                <EasingColorKeyFrame KeyTime="0:0:0" Value="#E8552E"/>
                <EasingColorKeyFrame KeyTime="0:0:2" Value="#F26B3A"/>
                <EasingColorKeyFrame KeyTime="0:0:4" Value="#FF7A3F"/>
                <EasingColorKeyFrame KeyTime="0:0:6" Value="#E8552E"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="GradientStop3" Storyboard.TargetProperty="Color">
                <EasingColorKeyFrame KeyTime="0:0:0" Value="#D64426"/>
                <EasingColorKeyFrame KeyTime="0:0:2" Value="#E8552E"/>
                <EasingColorKeyFrame KeyTime="0:0:4" Value="#F26B3A"/>
                <EasingColorKeyFrame KeyTime="0:0:6" Value="#D64426"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Floating Elements Animation with Enhanced Orange Colors -->
        <Storyboard x:Key="FloatingAnimation" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="FloatingElement1" Storyboard.TargetProperty="(Canvas.Top)">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="50"/>
                <EasingDoubleKeyFrame KeyTime="0:0:3" Value="30"/>
                <EasingDoubleKeyFrame KeyTime="0:0:6" Value="50"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="FloatingElement2" Storyboard.TargetProperty="(Canvas.Top)">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="100"/>
                <EasingDoubleKeyFrame KeyTime="0:0:4" Value="80"/>
                <EasingDoubleKeyFrame KeyTime="0:0:8" Value="100"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="FloatingElement3" Storyboard.TargetProperty="(Canvas.Top)">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="150"/>
                <EasingDoubleKeyFrame KeyTime="0:0:5" Value="130"/>
                <EasingDoubleKeyFrame KeyTime="0:0:10" Value="150"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Title Fade In Animation - keeping for subtitle -->
        <Storyboard x:Key="SubtitleFadeIn">
            <DoubleAnimation Storyboard.TargetName="SubtitleText" 
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.8"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource BackgroundAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource FloatingAnimation}"/>
        </EventTrigger>
    </Window.Triggers>

    <Border CornerRadius="20" BorderThickness="0" ClipToBounds="True">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop x:Name="GradientStop1" Color="#FF7A3F" Offset="0"/>
                <GradientStop x:Name="GradientStop2" Color="#E8552E" Offset="0.5"/>
                <GradientStop x:Name="GradientStop3" Color="#D64426" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect Color="#B8371A" BlurRadius="25" ShadowDepth="8" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Enhanced Floating Background Elements with Premium Orange Colors -->
            <Canvas>
                <Ellipse x:Name="FloatingElement1" Canvas.Left="100" Canvas.Top="50" 
                        Width="60" Height="60" Fill="#FFB377" Opacity="0.25"/>
                <Ellipse x:Name="FloatingElement2" Canvas.Right="150" Canvas.Top="100" 
                        Width="80" Height="80" Fill="#FF9F5C" Opacity="0.18"/>
                <Ellipse x:Name="FloatingElement3" Canvas.Left="200" Canvas.Top="150" 
                        Width="40" Height="40" Fill="#FFCC88" Opacity="0.3"/>
                <Rectangle Canvas.Right="50" Canvas.Bottom="80" 
                          Width="100" Height="100" Fill="#FFD9AA" Opacity="0.12">
                    <Rectangle.RenderTransform>
                        <RotateTransform Angle="45"/>
                    </Rectangle.RenderTransform>
                </Rectangle>
                <!-- Additional decorative elements -->
                <Ellipse Canvas.Left="50" Canvas.Bottom="120" 
                        Width="25" Height="25" Fill="#FF8B47" Opacity="0.2"/>
                <Rectangle Canvas.Right="200" Canvas.Top="60" 
                          Width="30" Height="30" Fill="#FFAA66" Opacity="0.15">
                    <Rectangle.RenderTransform>
                        <RotateTransform Angle="30"/>
                    </Rectangle.RenderTransform>
                </Rectangle>
            </Canvas>

            <!-- Title with Typing Effect and Modern Font -->
            <StackPanel x:Name="TitlePanel" Grid.Row="2" HorizontalAlignment="Center" 
                       Margin="0,80,0,0" Opacity="1">

                <TextBlock x:Name="TypingTitle"
                          Text="" 
                          FontSize="56" 
                          FontWeight="ExtraBold" 
                          Foreground="#FFFFFF" 
                          HorizontalAlignment="Center"
                          FontFamily="'Montserrat', 'Segoe UI', 'Helvetica Neue', Arial, sans-serif"
                          TextOptions.TextRenderingMode="ClearType"
                          TextOptions.TextFormattingMode="Display">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#A0300F" BlurRadius="12" ShadowDepth="4" Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock x:Name="SubtitleText"
                          Text="Cafe and Restaurant" 
                          FontSize="20" 
                          Foreground="#FFE6CC" 
                          HorizontalAlignment="Center"
                          Margin="0,15,0,0"
                          FontStyle="Normal"
                          FontWeight="Light"
                          Opacity="0"
                          FontFamily="'Montserrat', 'Segoe UI', 'Helvetica Neue', Arial, sans-serif"
                          TextOptions.TextRenderingMode="ClearType">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#A0300F" BlurRadius="5" ShadowDepth="2" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>

            <!-- Enhanced Divider with Premium Orange Accent -->
            <StackPanel Grid.Row="3" HorizontalAlignment="Center" Margin="0,25,0,0">
                <Rectangle Width="150" Height="2" Fill="#FFB377" Opacity="0.8">
                    <Rectangle.Effect>
                        <DropShadowEffect Color="#FF8B47" BlurRadius="4" ShadowDepth="0" Opacity="0.6"/>
                    </Rectangle.Effect>
                </Rectangle>
                <Ellipse Width="8" Height="8" Fill="#FFE6CC" Margin="0,-4,0,0">
                    <Ellipse.Effect>
                        <DropShadowEffect Color="#FF7A3F" BlurRadius="6" ShadowDepth="0" Opacity="0.8"/>
                    </Ellipse.Effect>
                </Ellipse>
            </StackPanel>

            <!-- Enhanced Loading Section with Premium Orange Colors -->
            <StackPanel Grid.Row="4" HorizontalAlignment="Center" Margin="0,25,0,0">
                <!-- Loading Text -->
                <TextBlock x:Name="LoadingText" 
                          Text="Preparing your experience..." 
                          FontSize="16" 
                          Foreground="#FFEEDC" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20"
                          FontWeight="Light">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#8B2D0F" BlurRadius="3" ShadowDepth="1" Opacity="0.6"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Enhanced Progress Indicator with Premium Orange Gradient -->
                <Grid Width="350" Height="10">
                    <!-- Background Track with subtle glow -->
                    <Border Background="#D64426" CornerRadius="5" Opacity="0.4">
                        <Border.Effect>
                            <DropShadowEffect Color="#A0300F" BlurRadius="3" ShadowDepth="0" Opacity="0.3"/>
                        </Border.Effect>
                    </Border>

                    <!-- Progress Fill with Enhanced Orange Gradient -->
                    <Border x:Name="ProgressBar" 
                            CornerRadius="5" 
                            HorizontalAlignment="Left"
                            Width="0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FFB377" Offset="0"/>
                                <GradientStop Color="#FFCC88" Offset="0.5"/>
                                <GradientStop Color="#FFE6CC" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#FF8B47" BlurRadius="12" ShadowDepth="0" Opacity="0.8"/>
                        </Border.Effect>
                    </Border>
                </Grid>

                <!-- Enhanced Animated Dots with Premium Orange Colors -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                    <Ellipse Width="10" Height="10" Fill="#FFE6CC" Margin="4" Opacity="0.5">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="#FF8B47" BlurRadius="4" ShadowDepth="0" Opacity="0.6"/>
                        </Ellipse.Effect>
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                               From="0.5" To="1" Duration="0:0:0.6" 
                                                               AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <Ellipse Width="10" Height="10" Fill="#FFE6CC" Margin="4" Opacity="0.5">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="#FF8B47" BlurRadius="4" ShadowDepth="0" Opacity="0.6"/>
                        </Ellipse.Effect>
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                               From="0.5" To="1" Duration="0:0:0.6" 
                                                               BeginTime="0:0:0.2" AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <Ellipse Width="10" Height="10" Fill="#FFE6CC" Margin="4" Opacity="0.5">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="#FF8B47" BlurRadius="4" ShadowDepth="0" Opacity="0.6"/>
                        </Ellipse.Effect>
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                               From="0.5" To="1" Duration="0:0:0.6" 
                                                               BeginTime="0:0:0.4" AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                </StackPanel>

                <!-- Enhanced Version Info with Premium Orange Styling -->
                <TextBlock Text= "Professional POS Edition" 
                          FontSize="11" 
                          Foreground="#FFD4B8" 
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"
                          FontWeight="Light"
                          Opacity="0.9">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#8B2D0F" BlurRadius="2" ShadowDepth="1" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</Window>