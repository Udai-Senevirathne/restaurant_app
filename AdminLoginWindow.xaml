<Window x:Class="POSSystem.AdminLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="2nd Eden - Admin Portal" 
        Height="700" Width="580"
        MinHeight="600" MinWidth="550"
        MaxHeight="900" MaxWidth="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Restaurant-Themed Color Palette for POS System -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#D2691E" Offset="0"/>
            <GradientStop Color="#8B4513" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF8C00" Offset="0"/>
            <GradientStop Color="#FF6347" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="WarmGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFE4B5" Offset="0"/>
            <GradientStop Color="#FFDAB9" Offset="0.5"/>
            <GradientStop Color="#F4A460" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#8B4513" Offset="0"/>
            <GradientStop Color="#A0522D" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFFAF0" Offset="0"/>
            <GradientStop Color="#FDF5E6" Offset="1"/>
        </LinearGradientBrush>

        <!-- Restaurant-Themed Glass Button Style -->
        <Style x:Key="GlassButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#D2691E" Offset="0"/>
                        <GradientStop Color="#8B4513" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="30,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="MainBorder" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="25" 
                                Padding="{TemplateBinding Padding}"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="ButtonScale" ScaleX="1" ScaleY="1"/>
                                    <TranslateTransform x:Name="ButtonTranslate" Y="0"/>
                                </TransformGroup>
                            </Border.RenderTransform>
                            <Border.Effect>
                                <DropShadowEffect x:Name="ButtonShadow" 
                                                Color="#8B4513" 
                                                BlurRadius="20" 
                                                ShadowDepth="8" 
                                                Opacity="0.4"/>
                            </Border.Effect>
                            
                            <!-- FIX: Wrap both children in a Grid -->
                            <Grid>
                                <!-- Glass overlay -->
                                <Border CornerRadius="25" 
                                        Background="White" 
                                        Opacity="0.1"/>
                                
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"
                                                TextElement.FontWeight="SemiBold"/>
                            </Grid>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale" 
                                                           Storyboard.TargetProperty="ScaleX" 
                                                           To="1.05" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale" 
                                                           Storyboard.TargetProperty="ScaleY" 
                                                           To="1.05" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="ButtonTranslate" 
                                                           Storyboard.TargetProperty="Y" 
                                                           To="-2" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="ButtonShadow" 
                                                           Storyboard.TargetProperty="BlurRadius" 
                                                           To="25" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="ButtonShadow" 
                                                           Storyboard.TargetProperty="ShadowDepth" 
                                                           To="12" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale" 
                                                           Storyboard.TargetProperty="ScaleX" 
                                                           To="1.0" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale" 
                                                           Storyboard.TargetProperty="ScaleY" 
                                                           To="1.0" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="ButtonTranslate" 
                                                           Storyboard.TargetProperty="Y" 
                                                           To="0" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="ButtonShadow" 
                                                           Storyboard.TargetProperty="BlurRadius" 
                                                           To="20" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="ButtonShadow" 
                                                           Storyboard.TargetProperty="ShadowDepth" 
                                                           To="8" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale" 
                                                           Storyboard.TargetProperty="ScaleX" 
                                                           To="0.98" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale" 
                                                           Storyboard.TargetProperty="ScaleY" 
                                                           To="0.98" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="ButtonTranslate" 
                                                           Storyboard.TargetProperty="Y" 
                                                           To="1" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale" 
                                                           Storyboard.TargetProperty="ScaleX" 
                                                           To="1.0" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale" 
                                                           Storyboard.TargetProperty="ScaleY" 
                                                           To="1.0" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="ButtonTranslate" 
                                                           Storyboard.TargetProperty="Y" 
                                                           To="0" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Restaurant-Themed TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="55"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#654321"/>
            <Setter Property="BorderBrush" Value="#DEB887"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CaretBrush" Value="#D2691E"/>
            <Setter Property="SelectionBrush" Value="#D2691E"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="InputBorder"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="InputScale" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Effect>
                                <DropShadowEffect x:Name="InputShadow" 
                                                Color="#D2691E" 
                                                BlurRadius="0" 
                                                ShadowDepth="0" 
                                                Opacity="0"/>
                            </Border.Effect>
                            
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                            Margin="{TemplateBinding Padding}"
                                            VerticalAlignment="Center"
                                            HorizontalScrollBarVisibility="Hidden"
                                            VerticalScrollBarVisibility="Hidden"
                                            Focusable="False"/>
                            </Grid>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="InputBorder" 
                                                          Storyboard.TargetProperty="BorderBrush.Color" 
                                                          To="#D2691E" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="InputScale" 
                                                           Storyboard.TargetProperty="ScaleX" 
                                                           To="1.02" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="InputScale" 
                                                           Storyboard.TargetProperty="ScaleY" 
                                                           To="1.02" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="InputShadow" 
                                                           Storyboard.TargetProperty="BlurRadius" 
                                                           To="15" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="InputShadow" 
                                                           Storyboard.TargetProperty="Opacity" 
                                                           To="0.2" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="InputBorder" 
                                                          Storyboard.TargetProperty="BorderBrush.Color" 
                                                          To="#DEB887" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="InputScale" 
                                                           Storyboard.TargetProperty="ScaleX" 
                                                           To="1.0" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="InputScale" 
                                                           Storyboard.TargetProperty="ScaleY" 
                                                           To="1.0" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="InputShadow" 
                                                           Storyboard.TargetProperty="BlurRadius" 
                                                           To="0" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="InputShadow" 
                                                           Storyboard.TargetProperty="Opacity" 
                                                           To="0" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Restaurant-Themed PasswordBox Style -->
        <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="55"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#654321"/>
            <Setter Property="BorderBrush" Value="#DEB887"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CaretBrush" Value="#D2691E"/>
            <Setter Property="SelectionBrush" Value="#D2691E"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="InputBorder"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="InputScale" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Effect>
                                <DropShadowEffect x:Name="InputShadow" 
                                                Color="#D2691E" 
                                                BlurRadius="0" 
                                                ShadowDepth="0" 
                                                Opacity="0"/>
                            </Border.Effect>
                            
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                            Margin="{TemplateBinding Padding}"
                                            VerticalAlignment="Center"
                                            HorizontalScrollBarVisibility="Hidden"
                                            VerticalScrollBarVisibility="Hidden"
                                            Focusable="False"/>
                            </Grid>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="InputBorder" 
                                                          Storyboard.TargetProperty="BorderBrush.Color" 
                                                          To="#D2691E" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="InputScale" 
                                                           Storyboard.TargetProperty="ScaleX" 
                                                           To="1.02" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="InputScale" 
                                                           Storyboard.TargetProperty="ScaleY" 
                                                           To="1.02" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="InputShadow" 
                                                           Storyboard.TargetProperty="BlurRadius" 
                                                           To="15" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="InputShadow" 
                                                           Storyboard.TargetProperty="Opacity" 
                                                           To="0.2" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="InputBorder" 
                                                          Storyboard.TargetProperty="BorderBrush.Color" 
                                                          To="#DEB887" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="InputScale" 
                                                           Storyboard.TargetProperty="ScaleX" 
                                                           To="1.0" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="InputScale" 
                                                           Storyboard.TargetProperty="ScaleY" 
                                                           To="1.0" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="InputShadow" 
                                                           Storyboard.TargetProperty="BlurRadius" 
                                                           To="0" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="InputShadow" 
                                                           Storyboard.TargetProperty="Opacity" 
                                                           To="0" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Restaurant-Themed Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#8B4513"/>
            <Setter Property="BorderBrush" Value="#DEB887"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="25,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="25" 
                               Padding="{TemplateBinding Padding}"
                               RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="SecondaryScale" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FDF5E6"/>
                                <Setter Property="BorderBrush" Value="#D2691E"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SecondaryScale" 
                                                           Storyboard.TargetProperty="ScaleX" 
                                                           To="1.02" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="SecondaryScale" 
                                                           Storyboard.TargetProperty="ScaleY" 
                                                           To="1.02" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SecondaryScale" 
                                                           Storyboard.TargetProperty="ScaleX" 
                                                           To="1.0" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="SecondaryScale" 
                                                           Storyboard.TargetProperty="ScaleY" 
                                                           To="1.0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SecondaryScale" 
                                                           Storyboard.TargetProperty="ScaleX" 
                                                           To="0.98" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="SecondaryScale" 
                                                           Storyboard.TargetProperty="ScaleY" 
                                                           To="0.98" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SecondaryScale" 
                                                           Storyboard.TargetProperty="ScaleX" 
                                                           To="1.0" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="SecondaryScale" 
                                                           Storyboard.TargetProperty="ScaleY" 
                                                           To="1.0" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Restaurant-Themed Floating Card Style -->
        <Style x:Key="FloatingCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradient}"/>
            <Setter Property="CornerRadius" Value="25"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#8B4513" BlurRadius="30" ShadowDepth="10" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    
        <!-- Main Content Card -->
        <Border Style="{StaticResource FloatingCard}"
                Margin="40"
                RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="MainCardScale" ScaleX="0.8" ScaleY="0.8"/>
                    <TranslateTransform x:Name="MainCardTranslate" Y="20"/>
                </TransformGroup>
            </Border.RenderTransform>
            <Border.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="MainCardScale" 
                                           Storyboard.TargetProperty="ScaleX" 
                                           From="0.8" To="1.0" Duration="0:0:0.8">
                                <DoubleAnimation.EasingFunction>
                                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetName="MainCardScale" 
                                           Storyboard.TargetProperty="ScaleY" 
                                           From="0.8" To="1.0" Duration="0:0:0.8">
                                <DoubleAnimation.EasingFunction>
                                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetName="MainCardTranslate" 
                                           Storyboard.TargetProperty="Y" 
                                           From="20" To="0" Duration="0:0:0.8">
                                <DoubleAnimation.EasingFunction>
                                    <BackEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Modern Header -->
                <Border Grid.Row="0" 
                        Background="{StaticResource PrimaryGradient}"
                        CornerRadius="25,25,0,0" 
                        Padding="35,25"
                        MouseDown="HeaderBorder_MouseDown">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ½ï¸ 2nd Eden Admin" 
                                      FontSize="26" FontWeight="Bold" 
                                      Foreground="White"/>
                            <TextBlock Text="Restaurant Management Portal" 
                                      FontSize="14" 
                                      Foreground="White" Opacity="0.85"
                                      Margin="0,8,0,0"/>
                        </StackPanel>

                        <!-- Window Controls -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button x:Name="MinimizeButton"
                                    Width="35" Height="35"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="White"
                                    FontSize="18"
                                    Cursor="Hand"
                                    Click="MinimizeButton_Click"
                                    Margin="0,0,10,0"
                                    ToolTip="Minimize">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="17.5"
                                                RenderTransformOrigin="0.5,0.5">
                                            <Border.RenderTransform>
                                                <ScaleTransform x:Name="MinScale" ScaleX="1" ScaleY="1"/>
                                            </Border.RenderTransform>
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFFFFF25"/>
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="MinScale" 
                                                                           Storyboard.TargetProperty="ScaleX" 
                                                                           To="1.1" Duration="0:0:0.1"/>
                                                            <DoubleAnimation Storyboard.TargetName="MinScale" 
                                                                           Storyboard.TargetProperty="ScaleY" 
                                                                           To="1.1" Duration="0:0:0.1"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="MinScale" 
                                                                           Storyboard.TargetProperty="ScaleX" 
                                                                           To="1.0" Duration="0:0:0.1"/>
                                                            <DoubleAnimation Storyboard.TargetName="MinScale" 
                                                                           Storyboard.TargetProperty="ScaleY" 
                                                                           To="1.0" Duration="0:0:0.1"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                                âˆ’
                            </Button>

                            <Button x:Name="CloseButton"
                                    Width="35" Height="35"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="White"
                                    FontSize="16"
                                    Cursor="Hand"
                                    Click="CloseButton_Click"
                                    ToolTip="Close">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="17.5"
                                                RenderTransformOrigin="0.5,0.5">
                                            <Border.RenderTransform>
                                                <ScaleTransform x:Name="CloseScale" ScaleX="1" ScaleY="1"/>
                                            </Border.RenderTransform>
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#ff4757"/>
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="CloseScale" 
                                                                           Storyboard.TargetProperty="ScaleX" 
                                                                           To="1.1" Duration="0:0:0.1"/>
                                                            <DoubleAnimation Storyboard.TargetName="CloseScale" 
                                                                           Storyboard.TargetProperty="ScaleY" 
                                                                           To="1.1" Duration="0:0:0.1"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="CloseScale" 
                                                                           Storyboard.TargetProperty="ScaleX" 
                                                                           To="1.0" Duration="0:0:0.1"/>
                                                            <DoubleAnimation Storyboard.TargetName="CloseScale" 
                                                                           Storyboard.TargetProperty="ScaleY" 
                                                                           To="1.0" Duration="0:0:0.1"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                                âœ•
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Enhanced Login Form -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="45,40">
                    
