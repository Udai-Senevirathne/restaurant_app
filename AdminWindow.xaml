<Window x:Class="restaurent_app.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Panel" Height="600" Width="900">
    <Grid>
        <TabControl>
            <TabItem Header="Menu Management">
                <Grid>
                    <DataGrid x:Name="MenuItemsDataGrid" AutoGenerateColumns="False" Margin="10" IsReadOnly="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price}"/>
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}"/>
                            <DataGridCheckBoxColumn Header="Available" Binding="{Binding IsAvailable}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
                        <Button x:Name="AddMenuItemButton" Content="Add" Margin="5" Width="80"/>
                        <Button x:Name="DeleteMenuItemButton" Content="Delete" Margin="5" Width="80"/>
                        <Button x:Name="SaveMenuItemButton" Content="Save" Margin="5" Width="80"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Order Management">
                <Grid>
                    <DataGrid x:Name="OrdersDataGrid" AutoGenerateColumns="False" Margin="10" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Order ID" Binding="{Binding Id}"/>
                            <DataGridTextColumn Header="Items" Binding="{Binding ItemsSummary}"/>
                            <DataGridTextColumn Header="Total" Binding="{Binding Total}"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
                        <Button x:Name="MarkCompletedButton" Content="Mark Completed" Margin="5" Width="120"/>
                        <Button x:Name="DeleteOrderButton" Content="Delete Order" Margin="5" Width="120"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
